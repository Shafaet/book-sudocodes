procedure BFS(G, source):
  Q = queue(), level[] = infinity
  Q.enqueue(source)
  level[source] = 0
  while Q is not empty
    u ‚Üê Q.pop()
    for all edges from u to v in G.adjacentEdges(u) do
      if level[v] = infinity:
        level[u] = level[v] + 1;
        Q.enqueue(v)
      end if
    end for
  end while
  Return distance
